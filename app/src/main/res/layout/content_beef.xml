<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="com.example.sandeepafernando.my_recipe.beef"
    tools:showIn="@layout/activity_beef">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageViewWathead"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/beef"
            />

        <TextView
            android:id="@+id/textViewWatTopic"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Beef Cuury"
            android:textAlignment="center"
            android:textColor="#000000"
            android:textSize="20dp"
            android:textStyle="bold"
            />

        <TextView
            android:id="@+id/textViewWatIn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:layout_marginTop="10dp"
            android:text="Ingredients:"
            android:textColor="#000000"
            android:textSize="15dp"
            android:textStyle="bold"
            />
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn1"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="2 tablespoons extra-virgin olive oil"
                android:textColor="#000000"
                android:textSize="15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn2"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="1 extra-large Spanish onion, chopped"
                android:textColor="#000000"
                android:textSize="15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn3"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="2 tablespoons water (optional)"
                android:textColor="#000000"
                android:textSize="15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn6"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="2 pounds lean ground beef"
                android:textColor="#000000"
                android:textSize="15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn7"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn7"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="4 cloves garlic, minced"
                android:textColor="#000000"
                android:textSize="15sp"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn8"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn8"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="2 tablespoons grated fresh ginger root"
                android:textColor="#000000"
                android:textSize="15sp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn9"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="1 serrano chile pepper, finely chopped"
                android:textColor="#000000"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn10"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="2 teaspoons chopped fresh cilantro"
                android:textColor="#000000"
                android:textSize="15sp"
                />


        </LinearLayout>

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn11"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="1 tablespoon ground coriander"
                android:textColor="#000000"
                android:textSize="15sp"
                />




        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn12"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullettwo"

                />

            <TextView
                android:id="@+id/textViewIn12"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="1 1/2 teaspoons salt"
                android:textColor="#000000"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn13"
                android:layout_width="20dp"
                android:layout_height="20dp"


                />

            <TextView
                android:id="@+id/textViewIn13"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Method"
                android:textColor="#000000"
                android:textSize="15sp"
                android:textStyle="bold"
                />

        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn14"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullet"

                />

            <TextView
                android:id="@+id/textViewIn14"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Heat olive oil in a large saucepan over medium-high heat. Cook and stir onion in the hot oil until soft and beginning to brown, about 12 minutes. If browned bits of onion are stuck to the bottom of the pan, stir water into onion and stir to loosen the browned bits."
                android:textColor="#000000"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn15"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullet"

                />

            <TextView
                android:id="@+id/textViewIn15"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Mix ground beef, garlic, ginger, serrano chile, and cilantro into pan; cook and stir until beef is browned and crumbly, 10 to 15 minutes. Reduce heat to medium-low. Stir coriander, salt, cumin, cayenne pepper, and turmeric into the beef; cook and stir until flavors blend, about 5 minutes. Add tomatoes and potatoes, cover pot, and simmer until potatoes are tender, about 15 minutes."
                android:textColor="#000000"
                android:textSize="15sp"
                />
        </LinearLayout>
        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:orientation="horizontal">


            <ImageView
                android:id="@+id/imageViewWatbulletIn16"
                android:layout_width="20dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/bullet"

                />

            <TextView
                android:id="@+id/textViewIn16"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                android:text="Mix green peas into dish and cook until sauce has slightly thickened and flavors have blended, 10 to 15 minutes. Sprinkle garam masala over the dish, cover, and let stand for 5 minutes before serving."
                android:textColor="#000000"
                android:textSize="15sp"
                />


        </LinearLayout>



    </LinearLayout>

</android.support.v4.widget.NestedScrollView>

